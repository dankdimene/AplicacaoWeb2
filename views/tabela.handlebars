<a href="/cadastrar"><button type="button" class="btn btn-success">Cadastrar Produto</button></a>

<table class="table">

    <thead>
        <tr>
            <th scope="col">Descrição</th>
            <th scope="col">Preço</th>
        </tr>
    </thead>

    <tbody>
        {{#each produto}}
        <tr>
            <th>{{descricao}}</th>
            <td>{{preco}}</td>
            <td>
                <a href="/editar/{{idproduto}}"><button type="submit" class="btn btn-warning">Editar</button></a>
                <a href="/remover/{{idproduto}}"><button type="submit" class="btn btn-danger">Apagar</button></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>